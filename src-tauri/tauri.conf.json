{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UnlockIt",
  "version": "0.1.0",
  "identifier": "UnlockIt",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "UnlockIt - Ultimate Achievement Tracker",
        "width": 1200,
        "height": 720,
        "closable": true,
        "minimizable": true,
        "maximizable": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon_square.png",
      "iconAsTemplate": false
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": ["en-US"],
        "dialogImagePath": "icons/dialog-image.bmp",
        "enableElevatedUpdateTask": true
      }
    },
    "publisher": "Mohamed Echbiy",
    "copyright": "Copyright (c) 2025 Mohamed Echbiy. All rights reserved.",
    "category": "Game",
    "shortDescription": "Ultimate Achievement Tracker for Gamers",
    "longDescription": "UnlockIt is the ultimate achievement tracking application for gamers. Track your progress across all your favorite games, unlock achievements, monitor playtime, and enhance your gaming experience with detailed statistics and insights.",
    "externalBin": [],
    "resources": ["resources/*"]
  }
}
