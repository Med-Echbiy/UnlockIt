{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "shell:default",
    "store:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**/*"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://**"
        },
        {
          "url": "http://**"
        }
      ]
    },
    {
      "identifier": "fs:allow-appdata-write-recursive"
    },
    {
      "identifier": "shell:allow-spawn"
    },
    "notification:default",
    "notification:default"
  ]
}
