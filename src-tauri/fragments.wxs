<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
    <!-- Additional fragments for MSI customization -->
    
    <!-- Custom Dialog for Installation Options -->
    <Fragment>
        <UI>
            <Dialog Id="UnlockItOptionsDlg" Width="370" Height="270" Title="UnlockIt Installation Options">
                <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Installation Options" />
                <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Choose additional options for your UnlockIt installation." />
                <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
                <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
                
                <!-- Desktop Shortcut Option -->
                <Control Id="DesktopShortcutCheckBox" Type="CheckBox" X="20" Y="60" Width="330" Height="17" 
                         Property="CREATE_DESKTOP_SHORTCUT" CheckBoxValue="1" Text="Create desktop shortcut" />
                
                <!-- Auto-start Option -->
                <Control Id="AutoStartCheckBox" Type="CheckBox" X="20" Y="80" Width="330" Height="17" 
                         Property="AUTO_START_UNLOCKIT" CheckBoxValue="1" Text="Start UnlockIt automatically when Windows starts" />
                
                <!-- File Association Option -->
                <Control Id="FileAssocCheckBox" Type="CheckBox" X="20" Y="100" Width="330" Height="17" 
                         Property="ASSOCIATE_GAME_FILES" CheckBoxValue="1" Text="Associate with game save files (.sav, .dat)" />

                <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
                <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
                <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
                    <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
                </Control>
                
                <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
            </Dialog>
        </UI>
    </Fragment>

    <!-- Progress Dialog Customization -->
    <Fragment>
        <UI>
            <TextStyle Id="WixUI_Font_Normal_Custom" FaceName="Segoe UI" Size="8" />
            <TextStyle Id="WixUI_Font_Bigger_Custom" FaceName="Segoe UI" Size="12" />
            <TextStyle Id="WixUI_Font_Title_Custom" FaceName="Segoe UI" Size="9" Bold="yes" />
        </UI>
    </Fragment>

    <!-- Custom Properties -->
    <Fragment>
        <Property Id="CREATE_DESKTOP_SHORTCUT" Value="1" />
        <Property Id="AUTO_START_UNLOCKIT" Value="0" />
        <Property Id="ASSOCIATE_GAME_FILES" Value="1" />
    </Fragment>

    <!-- Auto-start Registry Component -->
    <Fragment>
        <DirectoryRef Id="TARGETDIR">
            <Component Id="AutoStartComponent" Guid="12345678-1234-1234-1234-123456789012" Win64="yes">
                <Condition>AUTO_START_UNLOCKIT</Condition>
                <RegistryValue Root="HKCU" 
                              Key="Software\Microsoft\Windows\CurrentVersion\Run" 
                              Name="UnlockIt" 
                              Type="string" 
                              Value="&quot;[APPLICATIONFOLDER]UnlockIt.exe&quot; --minimized" 
                              KeyPath="yes" />
            </Component>
        </DirectoryRef>
    </Fragment>

    <!-- File Association Components -->
    <Fragment>
        <DirectoryRef Id="TARGETDIR">
            <Component Id="FileAssociationComponent" Guid="87654321-4321-4321-4321-210987654321" Win64="yes">
                <Condition>ASSOCIATE_GAME_FILES</Condition>
                
                <!-- .sav file association -->
                <RegistryValue Root="HKCU" Key="Software\Classes\.sav" Value="UnlockIt.SaveFile" Type="string" KeyPath="yes" />
                <RegistryValue Root="HKCU" Key="Software\Classes\UnlockIt.SaveFile" Value="Game Save File" Type="string" />
                <RegistryValue Root="HKCU" Key="Software\Classes\UnlockIt.SaveFile\DefaultIcon" Value="[APPLICATIONFOLDER]UnlockIt.exe,0" Type="string" />
                <RegistryValue Root="HKCU" Key="Software\Classes\UnlockIt.SaveFile\shell\open\command" Value="&quot;[APPLICATIONFOLDER]UnlockIt.exe&quot; &quot;%1&quot;" Type="string" />
                
                <!-- .dat file association -->
                <RegistryValue Root="HKCU" Key="Software\Classes\.dat" Value="UnlockIt.DataFile" Type="string" />
                <RegistryValue Root="HKCU" Key="Software\Classes\UnlockIt.DataFile" Value="Game Data File" Type="string" />
                <RegistryValue Root="HKCU" Key="Software\Classes\UnlockIt.DataFile\DefaultIcon" Value="[APPLICATIONFOLDER]UnlockIt.exe,0" Type="string" />
                <RegistryValue Root="HKCU" Key="Software\Classes\UnlockIt.DataFile\shell\open\command" Value="&quot;[APPLICATIONFOLDER]UnlockIt.exe&quot; &quot;%1&quot;" Type="string" />
            </Component>
        </DirectoryRef>
    </Fragment>

    <!-- Cleanup Component -->
    <Fragment>
        <DirectoryRef Id="TARGETDIR">
            <Component Id="CleanupComponent" Guid="11111111-2222-3333-4444-555555555555" Win64="yes">
                <!-- Remove application data on uninstall -->
                <RemoveFolder Id="RemoveAppDataFolder" Directory="APPLICATIONFOLDER" On="uninstall" />
                <RemoveFile Id="RemoveConfigFiles" Directory="APPLICATIONFOLDER" Name="*.config" On="uninstall" />
                <RemoveFile Id="RemoveLogFiles" Directory="APPLICATIONFOLDER" Name="*.log" On="uninstall" />
                <RegistryValue Root="HKCU" 
                              Key="Software\Mohamed Echbiy\UnlockIt\Cleanup" 
                              Name="installed" 
                              Type="integer" 
                              Value="1" 
                              KeyPath="yes" />
            </Component>
        </DirectoryRef>
    </Fragment>

</Wix>
